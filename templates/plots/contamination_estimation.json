{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Estimation of sample contamination.",
    "datasets": {
        "empirical_vaf_dist": [],
        "densities": []
    },
    "layer": [
        {
            "data": {
                "name": "empirical_vaf_dist"
            },
            "transform": [
                {
                    "calculate": "'hist'",
                    "as": "hist"
                }
            ],
            "encoding": {
                "color": {
                    "field": "hist",
                    "scale": {
                        "domain": [
                            "hist"
                        ],
                        "range": [
                            "lightgrey"
                        ]
                    },
                    "legend": {
                        "title": "",
                        "labelExpr": "'observed VAFs'"
                    }
                },
                "x": {
                    "field": "vaf",
                    "scale": {
                        "domain": [
                            0.0,
                            1.0
                        ],
                        "type": "linear"
                    },
                    "axis": {
                        "title": null
                    }
                },
                "y": {
                    "field": "count",
                    "scale": {
                        "type": "linear"
                    },
                    "axis": {
                        "title": null
                    }
                }
            },
            "mark": {
                "align": "left",
                "type": "bar",
                "tooltip": true
            }
        },
        {
            "data": {
                "name": "densities"
            },
            "encoding": {
                "color": {
                    "field": "type",
                    "legend": {
                        "title": "",
                        "labelExpr": "datum.label + ' purity'"
                    }
                },
                "x": {
                    "field": "purity",
                    "axis": {
                        "grid": false
                    },
                    "scale": {
                        "domain": [
                            0.0,
                            1.0
                        ],
                        "type": "linear"
                    }
                },
                "y": {
                    "field": "density",
                    "axis": {
                        "labels": false,
                        "title": "log density"
                    },
                    "scale": {
                        "type": "symlog"
                    }
                }
            },
            "mark": "line"
        }
    ],
    "resolve": {
        "scale": {
            "y": "independent",
            "color": "independent"
        }
    }
}